# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
POSTGRES_DB=arunadoc_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# Redis Configuration
REDIS_PASSWORD=<CHANGE_ME_STRONG_REDIS_PASSWORD>

# Rails Configuration
RAILS_ENV=production
RAILS_MASTER_KEY=<GENERATE_WITH: rails credentials:edit>
SECRET_KEY_BASE=<GENERATE_WITH: rails secret>
JWT_SECRET_KEY=<GENERATE_WITH: rails secret>

# Frontend API URL (use relative path /api for same domain)
VITE_API_URL=/api

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Application Domain (for SSL)
APP_DOMAIN=your-domain.com

# Email Configuration (for notifications, password reset, etc.)
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=<YOUR_SMTP_PASSWORD>
SMTP_DOMAIN=example.com
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# External Services (when integrated)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=arunadoc-production

# Monitoring (optional)
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=

# Logging
RAILS_LOG_LEVEL=info
